{
    "name": "capsule",
    "description": "A bare bones base theme with everything in it to build other themes on top of.",
    "demo": "https://demo.capsulethemes.com",
    "version": "0.0.7",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "Karl Oscar Weber",
        "email": "me@kow.fm",
        "url": "https://kow.fm/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/karloscarweber/capsule.git"
    },
    "bugs": "https://github.com/karloscarweber/capsule/issues",
    "contributors": "https://github.com/karloscarweber/capsule/graphs/contributors",
    "devDependencies": {
        "@tryghost/release-utils": "0.6.12",
        "autoprefixer": "10.2.5",
        "beeper": "2.1.0",
        "cssnano": "4.1.10",
        "gscan": "4.11.1",
        "gulp": "^4.0.2",
        "gulp-cli": "^2.3.0",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "9.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^4.1.1",
        "gulp-sourcemaps": "^1.6.0",
        "gulp-uglify": "3.0.2",
        "gulp-watch": "4.3.8",
        "gulp-zip": "5.1.0",
        "inquirer": "8.0.0",
        "littel": "^0.1.3",
        "path": "^0.12.7",
        "postcss": "8.2.8",
        "postcss-color-mod-function": "3.0.3",
        "postcss-custom-media": "^7.0.4",
        "postcss-custom-properties": "5.0.1",
        "postcss-easy-import": "1.0.1",
        "pump": "3.0.0",
        "sass": "^1.54.2",
        "underscore": "^1.12.0"
    },
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "header_behaviour": {
                "type": "select",
                "options": [
                    "normal",
                    "sticky"
                ],
                "default": "normal"
            },
            "publication_cover_style": {
                "type": "select",
                "options": [
                    "None",
                    "Medium",
                    "Large"
                ],
                "default": "Medium",
                "group": "homepage"
            },
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Light"
            },
            "header_button_background": {
                "type": "color",
                "default": "#ffffff"
            },
            "header_button_text_color": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark"
                ],
                "default": "Dark"
            },
            "post_image_width": {
                "type": "select",
                "options": [
                    "Wide",
                    "Full",
                    "Small"
                ],
                "default": "Wide",
                "group": "post"
            },
            "email_signup_for_logged_out_visitors": {
                "type": "select",
                "options": [
                    "Footer",
                    "Bottom of post",
                    "None"
                ],
                "default": "Footer",
                "group": "post"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Sign up for more like this.",
                "group": "post"
            },
            "show_recent_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    }
}
