{{!-- This is a partial file used to generate a post "card"
which templates loop over to generate a list of posts. --}}

<article class="post-card {{post_class}} {{#match @custom.feed_layout "!=" "Simple grid"}}{{#is "home"}}{{#match @custom.feed_layout "Dynamic grid"}}{{#has index="0"}}{{#if feature_image}}post-card-large{{/if}}{{/has}}{{else}}post-card-large{{/match}}{{/is}}{{/match}}">

    {{#if feature_image}}
    <a href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 800px"
            src="{{img_url feature_image size="m"}}"
            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            loading="lazy"
        />
    </a>
    {{/if}}

    <div >

        <a  href="{{url}}">
            <header >
                {{#if primary_tag}}
                    {{#primary_tag}}
                    <div >{{name}}</div>
                    {{/primary_tag}}
                {{/if}}
                <h2 >{{title}}</h2>
            </header>
            <div >
                <p>{{excerpt}}</p>
            </div>
        </a>

        <footer>
            <ul >
                {{#foreach authors}}
                <li >
                    {{#if profile_image}}
                    <a href="{{url}}" >
                        <img  src="{{img_url profile_image size="xs"}}" alt="{{name}}" loading="lazy" />
                    </a>
                    {{else}}
                    <a href="{{url}}" >{{> "icons/avatar"}}</a>
                    {{/if}}
                </li>
                {{/foreach}}
            </ul>
            <div >
                <span>{{#has author="count:>2"}}Multiple authors{{else}}{{authors}}{{/has}}</span>
                <span><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time> <span >&bull;</span> {{reading_time}}</span>
            </div>
        </footer>

    </div>{{!--/.post-card-content--}}

</article>
